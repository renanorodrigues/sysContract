                        </li>
                        
                      </ul>
                    </li>

                    <li>
                      <a><i class="fa fa-building" aria-hidden="true"></i>
                      Pessoa Física | Jurídica <span class="fa fa-chevron-down"></span></a>
                      <ul class="nav child_menu">
                        <li>
                          <%= link_to new_users_backoffice_persona_path do%>
                            Adicionar pessoa
                          <% end %>
                        </li>

                        <li>
                          <a><i class="fa fa-handshake-o" aria-hidden="true"></i>
                          Vendedores <span class="fa fa-chevron-down"></span></a>
                          <ul class="nav child_menu">
                            <li>
                              <%= link_to users_backoffice_path(:identification => "Vendedor") do%>
                                Relatório de vendedores
                              <% end %>
                            </li>
                          </ul>
                        </li>

                        <li>
                          <a><i class="fa fa-user-circle" aria-hidden="true"></i>
                          Clientes <span class="fa fa-chevron-down"></span></a>
                          <ul class="nav child_menu">
                            <li>
                              <%= link_to users_backoffice_path(:identification => "Cliente") do%>
                                Relatório de clientes
                              <% end %>
                            </li>
                          </ul>
                        </li>

                        <li>
                          <a><i class="fa fa-cubes" aria-hidden="true"></i>
                          Fornecedores <span class="fa fa-chevron-down"></span></a>
                          <ul class="nav child_menu">
                            <li>
                              <%= link_to users_backoffice_path(:identification => "Fornecedor") do%>
                                Relatório de fornecedores
                              <% end %>
                            </li>
                          </ul>
                        </li>
                       
                        <li>
                          <a><i class="fa fa-building-o" aria-hidden="true"></i>
