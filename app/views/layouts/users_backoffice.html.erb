              </div>
              <div class="profile_info">
                <span>Olá, <%= current_user.profile %></span>
                <h2><%= current_user.first_name %></h2>
              </div>
            </div>
            <!-- /menu profile quick info -->

            <br />

            <!-- sidebar menu -->
