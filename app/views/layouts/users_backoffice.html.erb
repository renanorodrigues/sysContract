                        <li>
                          <a><i class="fa fa-balance-scale" aria-hidden="true"></i>
                          Advocacia <span class="fa fa-chevron-down"></span></a>
                          <ul class="nav child_menu">
                            <li>
                              <%= link_to users_backoffice_path(:identification => "Escritório de advocacia") do%>
                                Relatório de escritórios
                              <% end %>
                            </li>
                          </ul>

                        </li>
                        
                      </ul>
                    </li>

                  <% end %>

