                    <a><i class="fa fa-files-o" aria-hidden="true"></i>
                    Documentos <span class="fa fa-chevron-down"></span></a>
                    <ul class="nav child_menu">
                      <li>
                        <%= link_to users_backoffice_documents_path do%>
                          Relatório de documentos
                        <% end %>
                      </li>
                      
                      <% if current_user.profile == "Analista" or current_user.profile == "Auxiliar" %>
                      <li>
                        <%= link_to new_users_backoffice_document_path do%>
                          Adicionar documento
                        <% end %>
                      </li>
                      <% end %>

                      <li>
                        <a><i class="fa fa-file-text" aria-hidden="true"></i>
                        Contratos <span class="fa fa-chevron-down"></span></a>
                        <ul class="nav child_menu">
                          <li>
                            <%= link_to users_backoffice_contracts_path do%>
                              Relatório de contratos
                            <% end %>
                          </li>
                        </ul>
                      </li>
                      
                    </ul>
                  </li>
                  
                </ul>
              </div>

            </div>
            <!-- /sidebar menu -->

            <!-- /menu footer buttons -->
            <div class="sidebar-footer hidden-small">
          
              <%=link_to edit_users_backoffice_user_path(current_user), { :data => { :toggle => "tooltip", :placement => "top" , :title => "Dados pessoais"}} do %>
                <span class="glyphicon glyphicon-cog" aria-hidden="true"></span>
              <% end %>

              <a data-toggle="tooltip" data-placement="top" title="FullScreen">
                <span class="glyphicon glyphicon-fullscreen" aria-hidden="true"></span>
              </a>
              <a data-toggle="tooltip" data-placement="top" title="Lock">
                <span class="glyphicon glyphicon-eye-close" aria-hidden="true"></span>
              </a>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <span class="glyphicon glyphicon-off" aria-hidden="true"></span>
              <% end %>
            </div>
