<% if @user.errors.any? %>

<div class="alert alert-danger" role="alert">
<ul>
<% @user.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
<% end %>
</ul>
</div>

<% end %>

<div class="clearfix"></div>
<div class="row">
<div class="col-md-12 col-sm-12 ">
    <div class="x_panel">
        <div class="x_title">
            <h2>Formulário <small>Usuário</h2>
            <ul class="nav navbar-right panel_toolbox">
                <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                    <ul class="dropdown-menu" role="menu">
                        <li><a class="dropdown-item" href="#">Settings 1</a>
                        </li>
                        <li><a class="dropdown-item" href="#">Settings 2</a>
                        </li>
                    </ul>
                </li>
                <li><a class="close-link"><i class="fa fa-close"></i></a>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <br />
            <%=form_with(model: [ :users_backoffice, @user], local:true) do |form|%>

                <div class="item form-group">  
                    <%= form.label :first_name, class:"col-form-label col-md-3 col-sm-3 label-align" %>
                    <div class="col-md-6 col-sm-6 ">
                        <%= form.text_field :first_name, class:"form-control", minlength:"2"%>
                    </div>
                </div>

                <div class="item form-group">  
                    <%= form.label :last_name, class:"col-form-label col-md-3 col-sm-3 label-align" %>
                    <div class="col-md-6 col-sm-6 ">
                        <%= form.text_field :last_name, class:"form-control"%>
                    </div>
                </div>

                <div class="item form-group">  
                    <%= form.label :cpf, class:"col-form-label col-md-3 col-sm-3 label-align" %>
                    <div class="col-md-6 col-sm-6 ">
                        <%= form.text_field :cpf, class:"form-control", maxlength:"11"%>
                    </div>
                </div>

                <div class="item form-group">  
                    <%= form.label :email, class:"col-form-label col-md-3 col-sm-3 label-align" %>
                    <div class="col-md-6 col-sm-6 ">
                        <%= form.text_field :email, class:"form-control"%>
                    </div>
                </div>

                <div class="item form-group">
                    <%= form.label :password, class:"col-form-label col-md-3 col-sm-3 label-align" %>
                    <div class="col-md-6 col-sm-6 ">
                        <%= form.password_field :password, class:"form-control", minlength:"6"%>
                    </div>
                </div>

                <% if current_user.profile_id == 1 %>
                    <div class="item form-group">
                        <%= form.label :profile_id, class:"col-form-label col-md-3 col-sm-3 label-align" %>
                        <%= form.select(:profile_id, Profile.all.collect {|p| [p.description, p.id]}, {}, :class => "form-control col-md-6 ml-2") %>
                    </div>
                <% end %>

                <div class="ln_solid"></div>
                <div class="item form-group">
                    <div class="col-md-6 col-sm-6 offset-md-3">
                        <%= form.submit "Cadastrar", class:"btn btn-success submit" %>
                    </div>
                </div>

            <% end %>
        </div>
    </div>
</div>
</div>
