<% if @comment.errors.any? %>

<div class="alert alert-danger" role="alert">
<ul>
<% @comment.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
<% end %>
</ul>
</div>

<% end %>

<div class="clearfix"></div>
<div class="row">
<div class="col-md-12 col-sm-12 ">
    <div class="x_panel">
        <div class="x_title">
            <h4 class="pt-5"> Coment√°rio</h4>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <br />
            <%=form_with(model: [ :users_backoffice_contract, @comment], local:true) do |form|%>
                <%= form.hidden_field :user_id, :value => current_user.id %>
                <%= form.hidden_field :contract_id, value: params['contract_id'] %>
                
                <div class="item form-group">  
                <%= form.label :observation, class:"col-form-label col-md-3 col-sm-3 label-align" %>
                <div class="col-md-8 col-sm-6">
                    <%= form.text_area :observation, size: "30x5", class:"form-control"%>
                </div>
                </div>

                <div class="item form-group" style="padding-left: 330px">  
                    <%= form.radio_button :status, true %>
                    <%= form.label :status, "Aprovado", :value => true, class:"col-form-label col-md-3 col-sm-3 " %>
                    
                    <%= form.radio_button :status, false, :checked => true %>
                    <%= form.label :status, "Desaprovado",  :value => false, class:"col-form-label col-md-3 col-sm-3 " %>
                </div> 
                
                <div class="ln_solid"></div>
                <div class="item form-group">
                    <div class="col-md-6 col-sm-6 offset-md-3">
                        <%= form.submit "Enviar", class:"btn btn-success submit" %>
                    </div>
                </div>

            <% end %>
        </div>
    </div>
</div>
</div>
