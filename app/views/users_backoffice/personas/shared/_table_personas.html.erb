<div class="x_panel">
    <div class="x_title">
        <h2>Relat√≥rio de pessoas</h2>
        <ul class="nav navbar-right panel_toolbox">
            <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
            </li>
            <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <a class="dropdown-item" href="#">Settings 1</a>
                <a class="dropdown-item" href="#">Settings 2</a>
                </div>
            </li>
            <li><a class="close-link"><i class="fa fa-close"></i></a>
            </li>
        </ul>
        <div class="clearfix"></div>
        </div>
        <div class="x_content">

            <%= render partial: "users_backoffice/shared/bradcrumbs"%>
        
            <%=link_to new_users_backoffice_persona_path, {:class => "btn btn-primary btn-circle", :data => { :toggle => "tooltip", :placement => "bottom" , :title => "Adicionar pessoa"}} do %>
                <i class="fa fa-user-plus" aria-hidden="true"></i>
            <% end %>

            <%=link_to users_backoffice_personas_path(:format => 'pdf'), {:class => "btn btn-danger btn-circle", :data => { :toggle => "tooltip", :placement => "bottom" , :title => "Exportar em PDF"}} do %>
                <i class="fa fa-file-pdf-o" aria-hidden="true"></i>
            <% end %>

            <%=link_to users_backoffice_personas_path(:format => 'xlsx'), {:class => "btn btn-success btn-circle", :data => { :toggle => "tooltip", :placement => "bottom" , :title => "Exportar em EXCEL"}}  do %>
                <i class="fa fa-file-excel-o" aria-hidden="true"></i>
            <% end %>

            <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap display" cellspacing="0" width="100%">
                <thead>
                    <th><%= trans_attr(@personas, :full_name) %></th>
                    <th><%= trans_attr(@personas, :identification) %></th>
                    <th><%= trans_attr(@personas, :email) %></th>
                    <th><%= trans_attr(@personas, :created_at) %></th>
                    <th></th>
                </thead>
                <tbody>
                    <% @personas.each do |persona| %>
                        <tr>
                            <td><%= persona.full_name %></td>
                            <td><%= persona.identification %></td>
                            <td><%= persona.email %></td>
                            <td><%= I18n.l(persona.created_at, format: :short) %></td>

                            <td>
                                <%=link_to users_backoffice_persona_path(persona), method: :delete, class:"btn btn-danger btn-circle", data: { confirm: "Tem certeza que quer excluir?" } do %>
                                    <i class="fa fa-minus-circle" aria-hidden="true"></i>
                                <% end %>
                            
                                <%=link_to edit_users_backoffice_persona_path(persona), class:"btn btn-warning btn-circle" do %>
                                    <i class="fa fa-pencil" aria-hidden="true"></i>
                                <% end %>
                            </td>
                            
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>